<h2 style="margin-top: 0;">Hostname: {{hostname}} <button name="view-logs">View Logs</button></h2>

<table>
  <tr>
    <th>Last Ping</th>
    <th>Platform</th>
    <th>CPU Time (Kernel)</th>
    <th>CPU Time (User)</th>
    <th>Last Stats</th>
  </tr>
  <tr>
    <td>{{lastPing}}</td>
    <td>{{platform.os}} {{platform.arch}}</td>
    <td>{{cpuTimeKernel}}</td>
    <td>{{cpuTimeUser}}</td>
    <td>{{sampleTime}}</td>
</table>

<table>
  <caption>Processes</caption>
  <tr>
    <th>Process Name</th>
    <th>Goal Version</th>
    <th>Error Code</th>
    <th>Plan</th>
    <th>CPU Time (Kernel)</th>
    <th>CPU Time (User)</th>
    <th>Last Stats</th>
  </tr>
  {{#each processDataCollection}}
    <tr>
      <td>{{name}}</td>
      <td>{{lastGoalVersionAchieved}}</td>
      <td>{{errorCode}}</th>
      <td>{{#each plan}}{{this}} {{else}}No Plan{{/each}}</td>
      <td>{{cpuTimeKernel}}</td>
      <td>{{cpuTimeUser}}</td>
      <td>{{sampleTime}}</td>
    </tr>
  {{else}}
    <tr>
      <td colspan="7">Waiting for process information</td>
  {{/each}}
</table>

<table>
  <caption>Disks</caption>
  <tr>
    <th>Disk Name</th>
    <th>Space Used</th>
    <th>Space Free</th>
    <th>Read Count</th>
    <th>Write Count</th>
    <th>Last Stats</th>
    <th>Tags</th>
  </tr>
  {{#each diskDataCollection}}
    <tr>
      <td>{{name}}</td>
      <td>{{diskSpaceUsed}}</th>
      <td>{{diskSpaceFree}}</td>
      <td>{{readCount}}</td>
      <td>{{writeCount}}</td>
      <td>{{sampleTime}}</th>
      <td>{{#each tags}}{{this}} {{else}}No Tags{{/each}}</td>
    </tr>
  {{else}}
    <tr>
      <td colspan="7">Waiting for disk information</td>
  {{/each}}
</table>

<div class="chart-row">
  <div class="chart-row-item">
    <div class="cpuChart"></div>
    CPU Time
  </div>
  {{#each processDataCollection}}
    <div class="chart-row-item">
      <div class="cpuChart{{name}}"></div>
      CPU Time (Process {{name}})
    </div>
  {{/each}}
  {{#each diskDataCollection}}
    <div class="chart-row-item">
      <div class="diskSpaceChart{{name}}"></div>
      Disk Space
    </div>
    <div class="chart-row-item">
      <div class="diskReadWriteChart{{name}}"></div>
      Reads/Writes
    </div>
  {{/each}}
 </div>
